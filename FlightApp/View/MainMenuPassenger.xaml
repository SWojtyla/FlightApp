<Page
    x:Class="FlightApp.View.MainMenuPassenger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FlightApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Windows.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <muxc:NavigationView x:Name="navigationViewPassenger" SelectionChanged="NavView_SelectionChanged">
        <muxc:NavigationView.MenuItems>
            <NavigationViewItemHeader Content="General"/>
            <NavigationViewItem Content="Flight info" Tag="FlightInfo">
                <NavigationViewItem.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <muxc:NavigationViewItem Content="Order products" Icon="Shop" Tag="Shop" />
            <NavigationViewItemHeader Content="Entertainment"/>
            <NavigationViewItem Content="Music" Tag="Music">
                <NavigationViewItem.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEC4F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <muxc:NavigationViewItem
                Content="Film"
                Icon="Video"
                Tag="Film" />
        </muxc:NavigationView.MenuItems>

        <Frame x:Name="ContentFrame">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </muxc:NavigationView>


</Page>
