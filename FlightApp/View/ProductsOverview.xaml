<Page
    x:Class="FlightApp.View.ProductsOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:FlightApp.Models"
    xmlns:local="using:FlightApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Windows.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <muxc:NavigationView
            x:Name="ShoppingMenu"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            PaneDisplayMode="Top"
            SelectionChanged="ShoppingMenu_SelectionChanged">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="Food" Tag="food"/>
                <muxc:NavigationViewItem Content="Drinks" Tag="drinks" />
                <muxc:NavigationViewItem Content="Other" Tag="other" />
                <muxc:NavigationViewItem Content="Order history" Tag="history"/>
            </muxc:NavigationView.MenuItems>
            <StackPanel>
                <GridView ItemsSource="{x:Bind ViewModel.Products,Mode=OneWay}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="data:Product">
                            <TextBlock FontSize="16" Text="{x:Bind Name,Mode=OneWay}" />
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </muxc:NavigationView>

    </Grid>
</Page>
